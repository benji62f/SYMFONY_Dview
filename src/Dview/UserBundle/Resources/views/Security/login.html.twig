    <!DOCTYPE html>
    <html>
        <head>
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <title>Dview | Log in</title>
            <!-- Tell the browser to be responsive to screen width -->
            <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/bootstrap/css/bootstrap.min.css') }}">
            <!-- Font Awesome -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/dist/css/AdminLTE.min.css') }}">
            <!-- iCheck -->
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/plugins/iCheck/square/blue.css') }}">

            <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
                <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
                <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        </head>
        <body class="hold-transition login-page">
            <div class="login-box">
                <div class="login-logo">
                    <a href="#">D<b>view</b></a>
                </div><!-- /.login-logo -->
                <div class="login-box-body">
                    {% if error %}
                        <div class="alert alert-danger" role="alert"><center>{{ error.message|trans({}, 'FOSUserBundle') }}</center></div>
                    {% endif %}
                    <p class="login-box-msg">Connexion</p>
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group has-feedback">
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" required="required" />
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input type="password" id="password" class="form-control" name="_password" placeHolder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" required="required" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                    </label>
                                </div>
                            </div><!-- /.col -->
                            <div class="col-xs-4">
                                <input type="submit" id="_submit" class="btn btn-primary btn-block btn-flat" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                            </div><!-- /.col -->
                        </div>
                    </form>
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a><br>
                </div><!-- /.login-box-body -->
            </div><!-- /.login-box -->

            
            
            <!-- jQuery 2.1.4 -->
            <script src="{{ asset('vendor/bootstrap/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
            <!-- Bootstrap 3.3.5 -->
            <script src="{{ asset('vendor/bootstrap/bootstrap/js/bootstrap.min.js') }}"></script>
            <!-- iCheck -->
            <script src="{{ asset('vendor/bootstrap/plugins/iCheck/icheck.min.js') }}"></script>
            <script>
                $(function () {
                    $('input').iCheck({
                        checkboxClass: 'icheckbox_square-blue',
                        radioClass: 'iradio_square-blue',
                        increaseArea: '20%' // optional
                    });
                });
            </script>
        </body>
    </html>
{#{% endblock fos_user_content %}#}