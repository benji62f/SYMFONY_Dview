{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Changer le mot de passe</h3>
            </div>
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(form.current_password, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                        <span class="help-block">{{ form_errors(form.current_password) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        <span class="help-block">{{ form_errors(form.plainPassword.first) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        <span class="help-block">{{ form_errors(form.plainPassword.second) }}</span>
                    </div>
                </div>
                <div class="box-footer">
                    <div>
                        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default">Retour</a>
                        <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-info pull-right"/>
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>