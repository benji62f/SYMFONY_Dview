{% extends 'DviewAdminBundle::layout.html.twig' %}

{% block dviewadmin_body %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Editer le compte</h3>
                </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.username) }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.email) }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.role, "Role", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.role) }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.password) }}</span>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="{{ path('dview_admin_account_listing') }}" class="btn btn-default">Retour</a>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}