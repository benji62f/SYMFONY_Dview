{% extends "DviewAdminBundle::layout.html.twig" %}
{% block dviewadmin_body %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Ajouter un élément cron</h3>
                </div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.cronFormat, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.cronFormat, {'attr': {'class': 'form-control', 'placeHolder' : 'sec    min    heure    jour/mois    mois    jour/semaine'}}) }}
                            <span class="help-block">{{ form_errors(form.cronFormat) }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.humanFormat, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.humanFormat, {'attr': {'class': 'form-control'}}) }}
                            <span class="help-block">{{ form_errors(form.humanFormat) }}</span>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="{{ path('dview_admin_cron_listing') }}" class="btn btn-default">Retour</a>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-info pull-right'}}) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}